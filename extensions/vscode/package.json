{
  "name": "loom-vscode",
  "displayName": "Loom",
  "description": "AI-powered coding assistant integrated with Loom",
  "version": "1.0.0",
  "publisher": "loom",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "ai",
    "assistant",
    "chat",
    "code",
    "loom"
  ],
  "activationEvents": [
    "onCommand:loom.openChat",
    "onView:loom.chatView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "loom.openChat",
        "title": "Open Loom Chat",
        "category": "Loom"
      },
      {
        "command": "loom.askAboutSelection",
        "title": "Ask Loom about selection",
        "category": "Loom"
      },
      {
        "command": "loom.explainCode",
        "title": "Explain this code",
        "category": "Loom"
      },
      {
        "command": "loom.generateTests",
        "title": "Generate tests",
        "category": "Loom"
      },
      {
        "command": "loom.refactorCode",
        "title": "Refactor code",
        "category": "Loom"
      },
      {
        "command": "loom.fixBug",
        "title": "Help fix this bug",
        "category": "Loom"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "loom",
          "title": "Loom",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "loom": [
        {
          "id": "loom.chatView",
          "name": "Chat",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "loom.askAboutSelection",
          "when": "editorHasSelection",
          "group": "loom"
        },
        {
          "command": "loom.explainCode",
          "when": "editorHasSelection",
          "group": "loom"
        },
        {
          "command": "loom.generateTests",
          "when": "editorHasSelection",
          "group": "loom"
        },
        {
          "command": "loom.refactorCode",
          "when": "editorHasSelection",
          "group": "loom"
        }
      ]
    },
    "configuration": {
      "title": "Loom",
      "properties": {
        "loom.apiEndpoint": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "Loom API endpoint URL"
        },
        "loom.apiKey": {
          "type": "string",
          "default": "",
          "description": "Loom API key (optional)"
        },
        "loom.model": {
          "type": "string",
          "default": "default",
          "description": "Preferred AI model"
        },
        "loom.autoContext": {
          "type": "boolean",
          "default": true,
          "description": "Automatically include file context in requests"
        },
        "loom.maxContextLines": {
          "type": "number",
          "default": 100,
          "description": "Maximum lines of context to include"
        },
        "loom.inlineSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline code suggestions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jordanhubbard/Loom.git"
  },
  "license": "MIT"
}
